#!/usr/bin/env python
import os, glob

#tests = glob.glob('*')
tests = ['ice40', 'mantle40']

def build():
    for test in tests:
        if os.path.isdir(test):
            if not test[0] == '_' and not test.startswith('test_'):
                os.system('cd %s; ./bake; cd ..' % test)

def clean():
    for test in tests:
        if os.path.isdir(test):
            if not test[0] == '_' and not test.startswith('test_'):
                os.system('cd %s; ./bake clean; cd ..' % test)

def gold():
    for test in tests:
        if os.path.isdir(test):
            if not test[0] == '_' and not test.startswith('test_'):
                os.system('cd %s; ./bake gold; cd ..' % test)

clean()
build()
#gold()
